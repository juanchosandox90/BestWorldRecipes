<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="result"
            type="com.sandoval.bestworldrecipes.data.models.Result" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recipesRowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/recipesCardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/lightMediumGray"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/recipeImageView"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:contentDescription="@string/recipe_image_view_desc"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/titleRecipeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/armata"
                    android:maxLines="2"
                    android:textColor="@color/darker"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/recipeImageView"
                    app:layout_constraintTop_toTopOf="@+id/recipeImageView"
                    tools:text="Recipe Title" />

                <TextView
                    android:id="@+id/descRecipeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/armata"
                    android:maxLines="3"
                    android:textColor="@color/darkGray"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="@+id/titleRecipeTextView"
                    app:layout_constraintStart_toStartOf="@+id/titleRecipeTextView"
                    app:layout_constraintTop_toBottomOf="@+id/titleRecipeTextView"
                    tools:text="This is a dummy text to describe the recipe" />

                <ImageView
                    android:id="@+id/heartIconImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/heart_icon_desc"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/heartCountTextView"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/heartCountTextView"
                    app:layout_constraintTop_toBottomOf="@+id/descRecipeTextView"
                    app:layout_constraintVertical_bias="0.274"
                    app:srcCompat="@drawable/ic_heart"
                    app:tint="@color/red" />

                <TextView
                    android:id="@+id/heartCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    app:layout_constraintBottom_toBottomOf="@+id/recipeImageView"
                    app:layout_constraintStart_toStartOf="@+id/descRecipeTextView"
                    app:layout_constraintTop_toBottomOf="@+id/heartIconImageView"
                    tools:text="100" />

                <ImageView
                    android:id="@+id/clockIconImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:contentDescription="@string/clock_icon_desc"
                    app:layout_constraintBottom_toBottomOf="@+id/heartIconImageView"
                    app:layout_constraintStart_toEndOf="@+id/heartIconImageView"
                    app:layout_constraintTop_toTopOf="@+id/heartIconImageView"
                    app:srcCompat="@drawable/ic_clock"
                    app:tint="@color/yellow" />

                <TextView
                    android:id="@+id/clockTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/yellow"
                    app:layout_constraintBottom_toBottomOf="@+id/heartCountTextView"
                    app:layout_constraintEnd_toEndOf="@+id/clockIconImageView"
                    app:layout_constraintStart_toStartOf="@+id/clockIconImageView"
                    app:layout_constraintTop_toTopOf="@+id/heartCountTextView"
                    tools:text="15 mins" />

                <ImageView
                    android:id="@+id/veganIconImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:contentDescription="@string/vegan_icon_desc"
                    app:layout_constraintBottom_toBottomOf="@+id/clockIconImageView"
                    app:layout_constraintStart_toEndOf="@+id/clockIconImageView"
                    app:layout_constraintTop_toTopOf="@+id/clockIconImageView"
                    app:srcCompat="@drawable/ic_vegan" />

                <TextView
                    android:id="@+id/veganTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="@+id/clockTimeTextView"
                    app:layout_constraintEnd_toEndOf="@+id/veganIconImageView"
                    app:layout_constraintStart_toStartOf="@+id/veganIconImageView"
                    app:layout_constraintTop_toTopOf="@+id/clockTimeTextView"
                    tools:text="Vegan" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>